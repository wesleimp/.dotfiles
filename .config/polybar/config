yellow     = #d79921
blue       = #458588
purple     = #b16286
teal       = #689d6a
orange     = #d65d0e
gray       = #a89984

[bar/main]
width  = 100%
height = 26
bottom = true
monitor = HDMI-1
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
padding-left  = 0
padding-right = 0

module-margin-left  = 0
module-margin-right = 0

