[user]
	name = Weslei Juan Moser Pereira
	email = wesleimsr@gmail.com

[url "ssh://git@github.com/"]
    insteadOf = https://github.com/

[core]
	editor = vim
	excludesfile = /home/weslei/.globalgitignore
    pager = delta

[delta]
    navigate = true

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictstyle = diff3

[diff]
	tool = vimdiff
    colorMoved = default

[github]
	user = wesleimp

[commit]
	gpgsign = false

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pull]
	rebase = false
[init]
	defaultBranch = main
